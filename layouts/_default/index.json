{{- $pages := where .Site.RegularPages "Section" "posts" -}}
[
{{- range $i, $page := $pages -}}
  {{- if $i }},{{ end }}
  {
    "title": {{ .Title | jsonify }},
    "url": {{ .RelPermalink | jsonify }},
    "description": {{ .Description | default "" | jsonify }},
    "tags": {{ .Params.tags | default (slice) | jsonify }},
    "date": {{ .Date.Format "January 2, 2006" | jsonify }},
    "content": {{ .Plain | truncate 300 "" | jsonify }}
  }
{{- end }}
]
