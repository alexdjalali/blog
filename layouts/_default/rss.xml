{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}
<rss version="2.0"
  xmlns:atom="http://www.w3.org/2005/Atom"
  xmlns:content="http://purl.org/rss/1.0/modules/content/"
  xmlns:dc="http://purl.org/dc/elements/1.1/">
  <channel>
    <title>{{ .Site.Title }}</title>
    <link>{{ .Site.BaseURL }}</link>
    <description>{{ .Site.Params.description | default (.Site.Title | plainify) }}</description>
    <language>{{ .Site.LanguageCode }}</language>
    <managingEditor>{{ with .Site.Params.displayName }}{{ . }}{{ end }}</managingEditor>
    <lastBuildDate>{{ now.Format "Mon, 02 Jan 2006 15:04:05 -0700" }}</lastBuildDate>
    <atom:link href="{{ "index.xml" | absURL }}" rel="self" type="application/rss+xml" />
    {{ with .Site.Params.avatarURL }}
    <image>
      <url>{{ . | absURL }}</url>
      <title>{{ site.Title }}</title>
      <link>{{ site.BaseURL }}</link>
    </image>
    {{ end }}
    {{ $pages := where .Site.RegularPages "Section" "posts" }}
    {{ range $pages }}
    <item>
      <title>{{ .Title | plainify }}</title>
      <link>{{ .Permalink }}</link>
      <guid isPermaLink="true">{{ .Permalink }}</guid>
      <pubDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" }}</pubDate>
      <dc:creator>{{ with site.Params.displayName }}{{ . }}{{ end }}</dc:creator>
      {{ with .Description }}
      <description>{{ . | plainify | htmlUnescape }}</description>
      {{ else }}
      <description>{{ .Summary | plainify | htmlUnescape }}</description>
      {{ end }}
      <content:encoded><![CDATA[{{ .Content }}]]></content:encoded>
      {{ range .Params.tags }}
      <category>{{ . }}</category>
      {{ end }}
    </item>
    {{ end }}
  </channel>
</rss>
